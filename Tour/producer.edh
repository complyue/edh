
{

  producer timelyAlert (interval, outlet) {
    outlet <- 'start alerting you every ' ++ interval ++ ' second(s) ...'
    for ts from runtime.everySeconds(interval) do
      outlet <- '⏰ alarm @@ ' ++ ts
  }

}

{

  n = 1
  for notif from timelyAlert(1) do {
    runtime.info<| ' ALARM #' ++ n ++ ' - ' ++ notif
    if (n+=1) > 3 then { break }
  }

}
